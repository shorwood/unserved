{
  "name": "@unserved/monorepo",
  "type": "module",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "homepage": "https://github.com/shorwood/unserved#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shorwood/unserved.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow"
      ]
    }
  },
  "scripts": {
    "dev": "uncli build --watch true",
    "build": "uncli build server client nuxt",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache ./packages/server ./packages/client ./packages/nuxt",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run server client nuxt",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit",
    "publish:ci": "uncli publish",
    "release": "uncli release",
    "preinstall": "node ./forcePnpm.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.5.0",
    "@types/node": "22.10.0",
    "@unshared/eslint-config": "0.2.2",
    "@unshared/scripts": "0.2.2",
    "@vitest/coverage-v8": "2.1.5",
    "@vitest/ui": "2.1.5",
    "@vitest/utils": "2.1.5",
    "commitlint": "19.6.0",
    "eslint": "9.14.0",
    "happy-dom": "15.11.6",
    "husky": "9.1.7",
    "memfs": "4.14.0",
    "sqlite3": "5.1.7",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-pnpm-scopes"
    ],
    "rules": {
      "body-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
